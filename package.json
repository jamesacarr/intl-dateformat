{
  "name": "intl-dateformat",
  "version": "0.2.0-0",
  "description": "Format a date using Intl.DateTimeFormat goodness.",
  "type": "module",
  "main": "src/index.js",
  "repository": "zapier/intl-dateformat",
  "author": "Nicolas Gryman <ngryman@gmail.com>",
  "license": "MIT",
  "keywords": [
    "date",
    "format",
    "timezone",
    "offset",
    "i18n",
    "l10n",
    "locale",
    "Intl.DateTimeFormat"
  ],
  "engines": {
    "node": "22.x"
  },
  "scripts": {
    "build": "tsup",
    "build:clean": "rimraf dist",
    "lint": "biome check --write .",
    "lint:ci": "biome check .",
    "test": "vitest",
    "test:coverage": "pnpm test -- --coverage",
    "typecheck": "tsc -p ./tsconfig.json",
    "prepare": "husky"
  },
  "files": [
    "lib/"
  ],
  "publishConfig": {
    "access": "restricted",
    "main": "./lib/index.cjs",
    "module": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "exports": {
      ".": {
        "import": "./lib/index.js",
        "require": "./lib/index.cjs",
        "types": "./lib/index.d.ts"
      }
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@types/node": "^24.2.1",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
